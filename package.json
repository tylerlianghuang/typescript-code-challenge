{
  "name": "typescript-code-challenge",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "eslint": "eslint '*/**/*.{ts,tsx}'",
    "format": "prettier --write '**/*.{ts,tsx,json,css,md,html}' --ignore-path .prettierignore",
    "prettier:check": "prettier --check '**/*.{ts,tsx,json,css,md,html}' --ignore-path .prettierignore"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint '*/**/*.{ts,tsx}'  ",
      "git add"
    ],
    "*.{json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "react": "^18",
    "react-dom": "^18",
    "next": "13.5.4",
    "mongodb": "^5.6.0",
    "styled-components": "^5.3.6"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "@types/styled-components": "^5.1.26",
    "babel-plugin-styled-components": "^2.0.7",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.11.0",
    "prettier": "^2.8.8"
  },
  "optionalDependencies": {
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0"
  }
}
